datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  paused      Boolean  @default(false)
  tasks       Task[]
  pauses      Pause[]
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  projectId   Int?
  project     Project? @relation(fields: [projectId], references: [id])
  createdAt   DateTime @default(now())
  completedAt DateTime?
  paused      Boolean  @default(false)
  pauses      Pause[]
}

model Pause {
  id        Int      @id @default(autoincrement())
  projectId Int?
  project   Project? @relation(fields: [projectId], references: [id])
  taskId    Int?
  task      Task?    @relation(fields: [taskId], references: [id])
  start     DateTime @default(now())
  end       DateTime?
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}
